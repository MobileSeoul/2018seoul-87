<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hippo.jun.weandseoul.BicycleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:elevation="5dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#000"
            android:textSize="20dp"/>

    </android.support.v7.widget.Toolbar>

    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용안내"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/info"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이용안내 정보없음"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/t1"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용요금"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/info"
                app:layout_constraintLeft_toLeftOf="@id/t1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fee"
                android:text="요금 정보없음"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintLeft_toLeftOf="@id/info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:text="주소"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/fee"
                app:layout_constraintLeft_toLeftOf="@id/t2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addr"
                android:text="주소정보 없음"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/t3"
                app:layout_constraintLeft_toLeftOf="@id/t3"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t4"
                android:text="자전거 보유량"
                app:layout_constraintTop_toBottomOf="@id/addr"
                app:layout_constraintLeft_toLeftOf="@id/addr"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bicycle"
                android:text="정보 없음"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/t4"
                app:layout_constraintLeft_toLeftOf="@id/t4"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t5"
                android:text="전화번호"
                app:layout_constraintTop_toBottomOf="@id/bicycle"
                app:layout_constraintLeft_toLeftOf="@id/bicycle"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tel"
                android:text="정보 없음"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/t5"
                app:layout_constraintLeft_toLeftOf="@id/t5"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</LinearLayout>
