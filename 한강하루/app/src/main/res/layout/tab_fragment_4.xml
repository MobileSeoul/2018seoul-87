<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <kr.go.seoul.airquality.AirQualityTypeMini
        android:id="@+id/type_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </kr.go.seoul.airquality.AirQualityTypeMini>
    <kr.go.seoul.airquality.AirQualityButtonTypeB
        android:id="@+id/type_b"
        android:layout_width="300dp"
        android:layout_height="90dp"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </kr.go.seoul.airquality.AirQualityButtonTypeB>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="대기정보 자세히 보기"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@id/type_b"
        app:layout_constraintBottom_toBottomOf="@id/type_b"
        app:layout_constraintRight_toRightOf="@id/type_b"
        app:layout_constraintLeft_toLeftOf="@id/type_b"
        app:layout_constraintHorizontal_bias="0.42"/>
    <ImageView
        android:id="@+id/i1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_manifying_glass"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/t1"
        app:layout_constraintBottom_toBottomOf="@id/t1"
        app:layout_constraintLeft_toRightOf="@id/t1"/>

</android.support.constraint.ConstraintLayout>