<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/cardView"
    android:layout_margin="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/i1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테니스 모임"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/i1"
            app:layout_constraintBottom_toBottomOf="@id/i1"
            app:layout_constraintLeft_toRightOf="@id/i1"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한강에서 테니스 한판~"
            android:textSize="14dp"
            android:textColor="#666"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/placetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="모임 장소 : "
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintLeft_toLeftOf="@id/content"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@id/placetext"
            app:layout_constraintTop_toTopOf="@id/placetext"
            app:layout_constraintBottom_toBottomOf="@id/placetext"/>
        <TextView
            android:id="@+id/numtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="모집 인원수 : "
            app:layout_constraintLeft_toLeftOf="@id/placetext"
            app:layout_constraintTop_toBottomOf="@id/placetext"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@id/numtext"
            app:layout_constraintTop_toTopOf="@id/numtext"/>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/number"/>
        <TextView
            android:textColor="#5cd6f8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/v1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="상세보기"/>



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
